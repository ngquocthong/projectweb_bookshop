{{ form_start(form) }}
<div class="row">
	<div class="col-md-6 col-lg-4">
		<div class="form-group has-success">
			{{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="form-group has-success">
			{{ form_row(form.fullname, {'attr': {'class': 'form-control'}}) }}
		</div>
        <div class="form-group has-success">
			{{ form_row(form.phone, {'attr': {'class': 'form-control'}}) }}
		</div>
        <div class="form-group has-success">
			{{ form_row(form.address, {'attr': {'class': 'form-control'}}) }}
		</div>
        <div class="form-group has-success">
			{{ form_row(form.deliverydate, {'attr': {'class': 'form-control'}}) }}
		</div>
	</div>
</div>
	<div class="row mt-3">
		<div class="col-md-6 col-lg-4">
			<div class="form-group">
				<button class="btn btn-success">{{ button_label|default('Save') }}</button>
			</div>
		</div>
	</div>
{{ form_end(form) }}