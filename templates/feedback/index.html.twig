{% extends 'baseadmin.html.twig' %}

{% block title %}Feedback index
{% endblock %}

{% block body %}
	<h1>All Feedback</h1>
	<div class="col-sm-12">
		<div class=" rounded h-100 p-1">
			<table class="table table-bordered text-center align-middle">
				<thead>
					<tr>
						<th>User Name</th>
						<th>Book name</th>
						<th>Content</th>
						<th>Date Time</th>
					</tr>
				</thead>
				<tbody>
					{% for feedback in feedback %}
						<tr>
                            <td>{{ user.firstname}}</td>
							<td>{{ feedback.book}}</td>
							<td>{{ feedback.content }}</td>
							<td>{{ feedback.datetime ? feedback.datetime|date('Y-m-d') : '' }}</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
{% endblock %}