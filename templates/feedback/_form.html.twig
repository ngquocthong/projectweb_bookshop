{% extends 'basestore.html.twig' %}
{% block body %}
	<section class="clean-block clean-form dark">
		<div class="container">

			<div class="row">
				<div class="block-heading">
					<h2 class="text-info">Feedbackr</h2>
				</div>
				{{ form_start(form) }}

				<div class="form_group">
					<div class="col-md-12 mb-3">
						{{ form_row(form.book, {'attr': {'class': 'form-control'}}) }}
					</div>
					<div class="form_group">
						<div class="col-md-12 mb-3">
							{{ form_row(form.content, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					
					
					<div class="form-group">
						<div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
							<button class="btn btn-success">{{ button_label|default('Save') }}</button>
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}