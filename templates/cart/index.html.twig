{% extends 'basestore.html.twig' %}

{% block body %}
<div class="container" style="padding:100px;">
<h2 class="text-info" style="text-align:center;">Shopping Cart</h2>
	<table  class="table">
		<thead>
			<tr>
				<th>Book</th>
				<th>Image</th>
				<th>Quantity</th>
				<th>Price</th>
                <th>Total</th>
				<th>Actions</th>

			</tr>
		</thead>
		<tbody>
			{% for cart in carts %}
				<tr>
					<td>{{ cart.book.name }}</td>
					<td><img src="/uploads/images/{{cart.book.image}}" style="width:100px"/></td>
					<td>
						<a href="{{ path('app_cart_down', {'id': cart.id}) }}" class="btn btn-danger">-</a>
						&nbsp;
						{{ cart.quantity }}
						&nbsp;
						<a href="{{ path('app_cart_up', {'id': cart.id}) }}" class="btn btn-primary">+</a>
					</td>
                    <td>{{ cart.book.price}}</td>
					<td>{{ cart.quantity * cart.book.price}}</td>
					<td>
						{{ include('cart/_delete_form.html.twig') }}
					</td>

				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-primary ms-2" href="{{path('app_order_new')}}">Order</a>
    <a class="btn btn-danger ms-2"  href="{{path('app_books')}}">Go Back</a>
</div>
{% endblock %}
