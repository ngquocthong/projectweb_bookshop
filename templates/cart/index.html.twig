{% extends 'base.html.twig' %}

{% block title %}Cart index
{% endblock %}

{% block body %}
	<h1>Cart index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Total</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for cart in carts %}
				<tr>
					<td>{{ cart.id }}</td>
					<td>{{ cart.total }}</td>
					<td>
						<div class="d-flex flex-row justify-content-center">
							<a class="btn btn-primary ms-2" href="{{ path('app_cart_show', {'id': cart.id}) }}">Details</a>
							<a class="btn btn-warning ms-2" href="{{ path('app_cart_show', {'id': cart.id}) }}">Edit</a>
							{{ include('author/_delete_form.html.twig') }}
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-success ms-2" href="{{ path('app_cart_new') }}">Create new</a>

{% endblock %}
