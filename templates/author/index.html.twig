{% extends 'baseadmin.html.twig' %}

{% block title %}Author
{% endblock %}

{% block body %}
	<h1>Author</h1>

	<table class="table table-bordered text-center align-middle">
		<thead>
			<tr>
				<th>Id</th>
				<th>Fullname</th>
				<th>Email</th>
				<th>Gender</th>
				<th>Actions</th>
			</tr>
		</thead>
		<tbody>
			{% for author in authors %}
				<tr>
					<td>{{ author.id }}</td>
					<td>{{ author.fullname }}</td>
					<td>{{ author.email }}</td>
					<td>{{ author.gender ? 'Male' : 'Female' }}</td>
					<td>
						<div class="d-flex flex-row justify-content-center">
							<a class="btn btn-primary ms-2" href="{{ path('app_author_show', {'id': author.id}) }}">Show</a>
							<a class="btn btn-warning ms-2" href="{{ path('app_author_edit', {'id': author.id}) }}">Edit</a>
							{{ include('author/_delete_form.html.twig') }}
						</div>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="11">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="btn btn-success ms-2" href="{{ path('app_author_new') }}">Create new</a>
{% endblock %}
