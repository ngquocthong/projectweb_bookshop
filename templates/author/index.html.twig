{% extends 'base.html.twig' %}

{% block title %}Author index{% endblock %}

{% block body %}
    <h1>Author index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Password</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Fullname</th>
                <th>Gender</th>
                <th>Dateofbirth</th>
                <th>Wallet</th>
                <th>Rate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for author in authors %}
            <tr>
                <td>{{ author.id }}</td>
                <td>{{ author.username }}</td>
                <td>{{ author.password }}</td>
                <td>{{ author.email }}</td>
                <td>{{ author.phone }}</td>
                <td>{{ author.fullname }}</td>
                <td>{{ author.gender }}</td>
                <td>{{ author.dateofbirth ? author.dateofbirth|date('Y-m-d') : '' }}</td>
                <td>{{ author.wallet }}</td>
                <td>{{ author.rate }}</td>
                <td>
                    <a href="{{ path('app_author_show', {'id': author.id}) }}">show</a>
                    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_author_new') }}">Create new</a>
{% endblock %}
