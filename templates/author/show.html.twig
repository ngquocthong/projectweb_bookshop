{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ author.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ author.password }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ author.email }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ author.phone }}</td>
            </tr>
            <tr>
                <th>Fullname</th>
                <td>{{ author.fullname }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ author.gender }}</td>
            </tr>
            <tr>
                <th>Dateofbirth</th>
                <td>{{ author.dateofbirth ? author.dateofbirth|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Wallet</th>
                <td>{{ author.wallet }}</td>
            </tr>
            <tr>
                <th>Rate</th>
                <td>{{ author.rate }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_author_index') }}">back to list</a>

    <a href="{{ path('app_author_edit', {'id': author.id}) }}">edit</a>

    {{ include('author/_delete_form.html.twig') }}
{% endblock %}
