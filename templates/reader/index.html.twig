{% extends 'baseadmin.html.twig' %}

{% block title %}Reader index{% endblock %}

{% block body %}
    <h1>Reader index</h1>

    <table class="table table-bordered text-center align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Gender</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reader in readers %}
            <tr>
                <td>{{ reader.id }}</td>
                <td>{{ reader.firstname }}</td>
                <td>{{ reader.lastname }}</td>
                <td>{{ reader.email }}</td>
                <td>{{ reader.phone }}</td>
                <td>{{ reader.gender ? 'Male' : 'Female' }}</td>
                <td>
                    <div class="d-flex flex-row justify-content-center">
								<a class="btn btn-primary ms-2" href="{{ path('app_reader_show', {'id': reader.id}) }}">Details</a>
								<a class="btn btn-warning ms-2" href="{{ path('app_reader_edit', {'id': reader.id}) }}">Edit</a>
								{{ include('reader/_delete_form.html.twig') }}
								</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
