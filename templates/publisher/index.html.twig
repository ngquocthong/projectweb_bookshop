{% extends 'baseadmin.html.twig' %}

{% block title %}Publisher{% endblock %}

{% block body %}
    <h1>Publisher</h1>

    <table class="table table-bordered text-center align-middle">
    <input id="myInput" type="text" placeholder="Search..">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody  id="myTable">
        {% for publisher in publishers %}
            <tr>
                <td>{{ publisher.id }}</td>
                <td>{{ publisher.name }}</td>
                <td>
                    <div class="d-flex flex-row justify-content-center">
								<a class="btn btn-primary ms-2" href="{{ path('app_publisher_show', {'id': publisher.id}) }}">Details</a>
								<a class="btn btn-warning ms-2" href="{{ path('app_publisher_show', {'id': publisher.id}) }}">Edit</a>
								{{ include('publisher/_delete_form.html.twig') }}
								</div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success ms-2" href="{{ path('app_publisher_new') }}">Create new</a>
{% endblock %}
