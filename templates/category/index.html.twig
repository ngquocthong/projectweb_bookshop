{% extends 'baseadmin.html.twig' %}

{% block title %}Category
{% endblock %}

{% block body %}
	<h1>All Categories</h1>
	<div class="col-sm-12">
		<div class=" rounded h-100 p-1">
		<input id="myInput" type="text" placeholder="Search..">
			<table class="table table-bordered text-center align-middle">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Des</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody  id="myTable">
					{% for category in categories %}
						<tr>
							<td>{{ category.id }}</td>
							<td>{{ category.name }}</td>
							<td>{{ category.description }}</td>
							<td>
							<div class="d-flex flex-row justify-content-center">
								<a class="btn btn-primary ms-2" href="{{ path('app_category_show', {'id': category.id}) }}">Details</a>
								<a class="btn btn-warning ms-2" href="{{ path('app_category_edit', {'id': category.id}) }}">Edit</a>
								{{ include('category/_delete_form.html.twig') }}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="4">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

	<a class="btn btn-success ms-2" href="{{ path('app_category_new') }}">Create new</a>
{% endblock %}
