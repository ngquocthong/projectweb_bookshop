{% extends 'baseadmin.html.twig' %}

{% block title %}Book
{% endblock %}

{% block body %}
	<h1>All Books</h1>
	<div class="col-sm-12">
		<div class=" rounded h-100 p-1">
		<input id="myInput" type="text" placeholder="Search..">
			<table class="table table-bordered text-center align-middle">
				<thead>
					<tr>
						<th>#</th>
						<th>Name</th>
						<th>Author</th>
						<th>Price</th>
						<th>PublishDate</th>
						<th>Rate</th>
						<th>Length</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody  id="myTable">
					{% for book in books %}
						<tr>
							<td>{{ book.id }}</td>
							<td>{{ book.name }}</td>
							<td>{{ book.description }}</td>
							<td>{{ book.price }}</td>
							<td>{{ book.publishDate ? book.publishDate|date('Y-m-d') : '' }}</td>
							<td>{{ book.rate }}</td>
							<td>{{ book.printlength }}</td>
							<td>
								<div class="d-flex flex-row justify-content-center">
								<a class="btn btn-primary ms-2" href="{{ path('app_book_show', {'id': book.id}) }}">Show</a>
								<a class="btn btn-warning ms-2" href="{{ path('app_book_edit', {'id': book.id}) }}">Edit</a>
								{{ include('book/_delete_form.html.twig') }}
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="10">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
        <a class="btn btn-success ms-2" href="{{ path('app_book_new') }}">Create new</a>
	</div>
	
    
{% endblock %}
